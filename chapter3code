tasks:
- name:Disable the Firewall Rule
  ansible.builtin.command: /usr/sbin/ufw disable
  when: ansible_facts['os_family'] == "Ubuntu"

  -name: Disable the firewall Rule
   Ufw disable
   When: If the firewall OS is Ubuntu
